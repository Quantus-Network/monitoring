    {
      "type": "stat",
      "title": "CPU Usage",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 5
      },
      "id": 3,
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", job=\"telemetry-host\"}[5m])) * 100)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "text": {
          "titleSize": 16,
          "valueSize": 48
        },
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "#1f1fa3"
              },
              {
                "value": 60,
                "color": "#ed4cce"
              },
              {
                "value": 80,
                "color": "#ffe91f"
              }
            ]
          }
        }
      }
    },
